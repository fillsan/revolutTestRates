<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBarText">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextAppearance.Headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/textHeadline</item>
    </style>

    <style name="CurrencyCode" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="CurrencyName" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">#8B959E</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Image.Currency" parent="">
        <item name="android:layout_width">@dimen/image_size</item>
        <item name="android:layout_height">@dimen/image_size</item>
    </style>

    <style name="Text.Toolbar" parent="">
        <item name="android:layout_marginTop">@dimen/marginLayout</item>
        <item name="android:layout_marginStart">@dimen/marginToolbar</item>
        <item name="android:textAppearance">@style/TextAppearance.Headline</item>
    </style>

    <style name="Amount" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearance.Headline</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="EditTheme" parent="">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorGreyLight</item>
    </style>

</resources>
